    <link rel="stylesheet" href="/css/site.css">


    <script>
        const showAlertMsg = () => {
            navigator.getMedia = (navigator.getUserMedia || // use the proper vendor prefix
                navigator.webkitGetUserMedia ||
                navigator.mozGetUserMedia ||
                navigator.msGetUserMedia);
            var name = document.getElementById("roomname").value;
            var username = document.getElementById("username").value;

            localStorage["RoomName"] = name;
            localStorage["UserName"] = username;

            navigator.getMedia({ video: true }, function () {
                window.location.href = '/videoconf.html';
            }, function () {

                alert("You do not have a web cam attached.");
            });

        }

        const Logout = () => {
            window.location.href = '/User/logout';
        }
    </script>
</head>


<body>

    <section class="hero is-info is-fullheight">
        <div class="hero-head">
            <nav class="navbar">
                <div class="container">
                    <div class="navbar-brand">
                        <a class="navbar-item" href="/">

                        </a>
                        <span class="navbar-burger burger" data-target="navbarMenu">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </div>
                    <div id="navbarMenu" class="navbar-menu">
                        <div class="navbar-end">

                            <span class="navbar-item">
                                <a class="button is-white is-outlined" href="#">
                                    <span class="icon">
                                        <i class="fa fa-superpowers"></i>
                                    </span>
                                    <span>Examples</span>
                                </a>
                            </span>

                            <span class="navbar-item">
                                <a class="button is-white is-outlined" href="#">
                                    <span class="icon">
                                        <i class="fa fa-github"></i>
                                    </span>
                                    <span>View Source</span>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-6 is-offset-3">
                    <h1 class="title">
                        AN Video Chat
                    </h1>
                    <h2 class="subtitle">
                        Secure Video Chat using P2P Web RTC for upto 4 persons.
                    </h2>
                    <div class="box">
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                                <input class="input is-large is-primary" id="roomname" name="roomname" placeholder="Room Name">
